{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "campaign-manager"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "assets/lib/bootstrap/css/bootstrap.min.css",
        "assets/lib/vectormap/jquery-jvectormap-2.0.2.css",
        "assets/lib/chart-c3/c3.min.css",
        "assets/lib/chartjs/chartjs-sass-default.css",
        "assets/lib/datatables/jquery.dataTables.min.css",
        "assets/lib/datatables/responsive.bootstrap.min.css",
        "assets/lib/toast/jquery.toast.min.css",
        "assets/css/icons.css",
        "assets/css/style.css",
        "assets/lib/chartjs/chartjs-sass-default.css"       
      ],
      "scripts": [
        "assets/lib/jquery/dist/jquery.min.js",
        "assets/lib/bootstrap/js/popper.min.js",
        "assets/lib/bootstrap/js/bootstrap.min.js",
        "assets/lib/pace/pace.min.js",
        "assets/lib/jasny-bootstrap/js/jasny-bootstrap.min.js",
        "assets/lib/slimscroll/jquery.slimscroll.min.js",
        "assets/lib/nano-scroll/jquery.nanoscroller.min.js",
        "assets/lib/metisMenu/metisMenu.min.js",
        "assets/js/custom.js",
        "assets/lib/chartjs/chart.min.js",
        "assets/lib/chartjs/chartjs-sass.js",
        "assets/lib/vectormap/jquery-jvectormap-2.0.2.min.js",
        "assets/lib/vectormap/jquery-jvectormap-us-aea-en.js",
        "assets/lib/chart-c3/d3.min.js",
        "assets/lib/chart-c3/c3.min.js",
        "assets/lib/datatables/jquery.dataTables.min.js",
        "assets/lib/datatables/dataTables.responsive.min.js",
        "assets/lib/toast/jquery.toast.min.js",
        "assets/js/dashboard.js",
        "assets/lib/flot/jquery.flot.js",
        "assets/lib/flot/jquery.flot.resize.js",
        "assets/lib/flot/jquery.flot.pie.js",
        "assets/lib/flot/jquery.flot.time.js",
        "assets/lib/flot/jquery.flot.tooltip.min.js",
        "assets/js/flot.custom.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
